timeout 300
default 0
color light-blue/blue black/light-grey
splashimage=/boot/splash.xpm.gz

title << Back to Main Menu
configfile /boot/grub/menu.lst

title Autologin Gnome desktop 
kernel /boot/vmlinuz26 keymap=us locale=en_US.UTF-8 ramdisk_size=60% aufs custom session=gnome autologin
initrd /boot/archlive.img

