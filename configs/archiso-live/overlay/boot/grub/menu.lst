timeout 300
default 0
color light-blue/blue black/light-grey
splashimage=/boot/splash.xpm.gz

title Boot ArchLive Lxde Desktop
kernel /boot/vmlinuz26 elevator=deadline lang=en ramdisk_size=60% aufs nonfree=no
initrd /boot/archlive.img

title Boot ArchLive Lxde Desktop (nonfree drivers)
kernel /boot/vmlinuz26 elevator=deadline lang=en ramdisk_size=60% aufs nonfree=yes
initrd /boot/archlive.img

#title Select Desktop (nonfree drivers)
#configfile /boot/grub/nonfree-desktop.lst

#title Select Desktop (free drivers only)
#configfile /boot/grub/desktop.lst

title Boot ArchLive Lxde Desktop in failsafe mode
kernel /boot/vmlinuz26 elevator=deadline lang=en ramdisk_size=60% aufs acpi=off noapic pci=bios nonfree=no
initrd /boot/archlive.img

#title Boot ArchLive Desktop with unionfs
#kernel /boot/vmlinuz26 elevator=deadline lang=en ramdisk_size=60% custom nonfree=no
#initrd /boot/archlive.img

title Tools...
configfile /boot/grub/tools.lst

title Grub Settings...
configfile /boot/grub/settings.lst

title View Help...
configfile /boot/grub/help.lst

title More Options...
configfile /boot/grub/more.lst

title  Shutdown the Computer
halt

title  Reboot the Computer
reboot

