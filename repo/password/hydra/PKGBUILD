# Contributor: ice-man <icemanf@gmail.com>
pkgname=hydra
pkgver=5.4
pkgrel="1"
pkgdesc="A very fast network logon cracker which support many different services"
depends=('gtk2')
makedepends=('make' 'gcc')
source=("http://freeworld.thc.org/releases/$pkgname-$pkgver-src.tar.gz"
	    "configure.patch")
url="http://www.thc.org/thc-hydra/"
arch=('i686' 'x86_64')
groups=('archpwn' 'archpwn-password' 'archpwn-bruteforce')
license="GPL"
md5sums=('fa08b465d19321e77b1a0ef912eeecc1' 'b01a5e58a9cc4fd981c100b14d2e6e41')
sha1sums=('2134092c7b64132c080b6b1ba155124b885767db' '312a9a8872f4ca66299d53b34535138164d29790')

build() {

  cd ${startdir}/src/${pkgname}-${pkgver}-src

  echo -e "\nPATCHING CONFIGURE\n-------------------------------"
  patch -p0 < ../configure.patch > /dev/null

  mkdir -p $startdir/pkg/usr/bin

  cd $startdir/src/$pkgname-$pkgver-src
  ./configure --prefix=$startdir/pkg/usr
  make; make install
}
