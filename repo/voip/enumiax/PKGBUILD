# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=enumiax
pkgver=0.4a
pkgrel=1
pkgdesc="IAX enumerator"
url="http://www.tippingpoint.com/"
groups=('archpwn' 'archpwn-voip' 'archpwn-enumeration')
license=('GPL')
arch=(i686 x86_64)
source=(http://www.tippingpoint.com/security/materials/${pkgname}-${pkgver}.tar.gz)
md5sums=('2a148fd2faa74d636ad891c7073fbd96')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  sed -ie "s|ienumiaxtall|/bin/install|g" Makefile
  make || return 1

  install -d $pkgdir/usr/bin
  make BINDIR=$pkgdir/usr/bin install || return 1
}

# vim:set ts=2 sw=2 et:
