# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=smap
pkgver=20081016
pkgrel=1
pkgdesc="smap is a mashup of nmap and sipsak. To sum up functionality in one sentence it aides in both locating and fingerprinting remote SIP devices."
url="http://www.wormulon.net/smap/"
groups=('archpwn' 'archpwn-voip')
license=('GPL')
arch=(i686 x86_64)
source=(http://www.wormulon.net/$pkgname/${pkgname}-${pkgver}.tar.gz)
md5sums=('814456ccc8fea5688382b7ec55fe44eb')

build() {
  cd "$srcdir/$pkgname"
  make || return 1

  install -d $pkgdir/usr/bin
  install -d $pkgdir/usr/share/doc/$pkgname

  install -Dm755 $pkgname $pkgdir/usr/bin/
  install -Dm644 README $pkgdir/usr/share/doc/$pkgname/
}

# vim:set ts=2 sw=2 et:
