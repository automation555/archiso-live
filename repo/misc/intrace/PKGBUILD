# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=intrace
pkgver=1.4.1
pkgrel=1
pkgdesc="utility to run traceroute within an established TCP connection, \
        thereby bypassing some stateful packet filters."
url="http://lcamtuf.coredump.cx"
license=('GPL')
depends=('tcpdump')
makedepends=('make' 'gcc')
groups=('archpwn' 'archpwn-misc')
arch=(i686 x86_64)
provides=(intrace)
conflicts=(intrace)
source=(http://www.swiecki.net/red/progs/$pkgname-$pkgver.tgz)
md5sums=('72a548187f6a5da50319dfb0a6f841bc')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make || return 1

  install -d $pkgdir/usr/bin
  install -d $pkgdir/usr/share/doc/intrace

  install -Dm755 intrace $pkgdir/usr/bin/intrace
  install -Dm644 README $pkgdir/usr/share/doc/intrace/README
}

# vim:set ts=2 sw=2 et:
