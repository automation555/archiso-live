# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=3proxy
pkgver=0.6
pkgrel=1
pkgdesc="3proxy tiny free proxy server"
url="http://3proxy.ru/"
groups=('archpwn' 'archpwn-misc')
license=('GPL')
arch=(i686 x86_64)
source=(http://3proxy.ru/current/$pkgname-$pkgver-devel.tgz)
md5sums=('8fc7a5abc63425d514311837a1c9029f')

build() {
  cd $srcdir/$pkgname-$pkgver-devel

  sed -ie "s|/usr/bin/install|/bin/install|g" Makefile.Linux
  sed -ie "s|/usr/local|/usr|g" Makefile.Linux
  sed -ie "s|-s ||g" Makefile.Linux
  sed -ie "s|\$(prefix)/etc/|/etc/|g" Makefile.Linux

  make -f Makefile.Linux prefix=/usr || return 1
  make -j1 -f Makefile.Linux install DESTDIR=$pkgdir/ || return 1
}

# vim:set ts=2 sw=2 et:
