pkgname=glassified-splash
pkgver=1.2.1
pkgrel=1
pkgdesc="Glassified KSplash theme"
arch=('i686' 'x86_64')
url="http://kde-look.org/content/show.php/Glassified+Splash?content=84124"
license=('LGPL')
source=('http://www.wochenendkommune.org/kde-look/Glassified-Splash.tar.gz')
md5sums=('14a9e0f229430be0d18b3015054ef6aa')

build() {
  mkdir -p $startdir/pkg/usr/share/apps/ksplash/Themes
  cd $startdir/src
  cp -R Glassified $startdir/pkg/usr/share/apps/ksplash/Themes
}
