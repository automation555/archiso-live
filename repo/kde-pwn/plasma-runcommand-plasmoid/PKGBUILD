# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=plasma-runcommand-plasmoid
pkgver=1.0
pkgrel=1
pkgdesc="A convenient plasmoid to run commands without using a terminal or KRunner."
arch=('i686' 'x86_64')
url="http://www.kde-look.org/content/show.php/show.php?content=91495&vote=good&tan=15486712"
license=('GPL2')
depends=('kdebase-workspace')
makedepends=('cmake' 'gcc' 'automoc4')
source=(http://kde-look.org/CONTENT/content-files/91495-runcommand_1.0.tar.bz2)
md5sums=('2b84999f79af020156ee586cc08310df')

build() {
  cd $startdir/src/runcommand_$pkgver
  sed -ie "s|find_package(Plasma REQUIRED)||g" CMakeLists.txt || return 1
  mkdir build
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=`kde4-config --prefix` ../ || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
