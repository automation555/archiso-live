pkgname=perl-math-gmp
pkgver=2.05
pkgrel=1
pkgdesc="Math::GMP"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~TURNSTEP/Math-GMP"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/T/TU/TURNSTEP/Math-GMP-$pkgver.tar.gz) 
md5sums=('d719578064fb935e2f8403ba0340179a')

build() {
  cd  $startdir/src/Math-GMP-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
