# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=perl-file-homedir
pkgver=0.83_01
pkgrel=1
pkgdesc="File::HomeDir"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~ADAMK/File-HomeDir"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/A/AD/ADAMK/File-HomeDir-$pkgver.tar.gz) 
md5sums=('ce76dbf978b5259a77bb56ffaa7a0ba4')

build() {
  cd  $startdir/src/File-HomeDir-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
