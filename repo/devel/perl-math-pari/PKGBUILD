pkgname=perl-math-pari
pkgver=2.010800
pkgrel=1
pkgdesc="Interface to the powerful PARI library"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~modules/Math-Pari"
license=('GPL' 'PerlArtistic')
depends=('perl')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/I/IL/ILYAZ/modules/Math-Pari-$pkgver.tar.gz) 
md5sums=('43d050e73068360599cde6cc076f1d32')

build() {
  cd  $startdir/src/Math-Pari-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
