pkgname=perl-convert-pem
pkgver=0.07
pkgrel=1
pkgdesc="Read/write encrypted ASN.1 PEM files"
arch=('i686' 'x86_64')
url="http://search.cpan.org/~BTROTT/Convert-PEM"
license=('GPL' 'PerlArtistic')
depends=('perl-class-errorhandler' 'perl-convert-asn1>=0.10' 'perl-crypt-des-ede3')
options=('!emptydirs')
source=(http://www.cpan.org/authors/id/B/BT/BTROTT/Convert-PEM-$pkgver.tar.gz) 
md5sums=('d2188dd87446004c8da882b5a1f20412')

build() {
  cd  $startdir/src/Convert-PEM-$pkgver
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  make || return 1
  make install DESTDIR=$startdir/pkg || return 1
  find $startdir/pkg -name '.packlist' -delete
  find $startdir/pkg -name '*.pod' -delete
}
