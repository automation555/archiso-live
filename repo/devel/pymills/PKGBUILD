# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=python-mills
pkgver=3.3.2
pkgrel=1
pkgdesc="pymills is a collection of works by James Mills containing general purpose and special purpose libraries and modules for the Python programming language."
url="http://trac.shortcircuit.net.au/pymills/"
license=('GPL')
depends=('python')
arch=(i686 x86_64)
source=(${pkgname}-${pkgver}.tar.gz::http://pypi.python.org/packages/source/p/pymills/pymills-3.3.2.tar.gz#md5=fc46277037e3861dbaf26ce869ef397b)
md5sums=('fc46277037e3861dbaf26ce869ef397b')

build() {
  cd "$srcdir"
  mv "pymills-$pkgver" "pymills"
  cd "pymills"
  python setup.py install --prefix=/usr --root=$pkgdir
}

# vim:set ts=2 sw=2 et:
