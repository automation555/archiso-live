# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=dnsenum
pkgver=1.2
pkgrel=1
pkgdesc="multithread script to enumerate DNS information on a domain and to discover non-contiguous ip blocks."
url="http://www.filip.waeytens.easynet.be/"
license="GPL" 
arch=(any)
groups=('archpwn' 'archpwn-enumeration')
depends=('perl-net-dns' 'perl-net-ip' 'perl-net-netmask')
source=(http://www.filip.waeytens.easynet.be/$pkgname$pkgver.tar.gz)
md5sums=('36d9150bd266ccf5eb55edf0e79f4ea8')

build() { 
  cd $startdir/src/$pkgname$pkgver
  install -d $pkgdir/usr/bin/
  install -d $pkgdir/usr/share/dnsenum/
  install -Dm755 dnsenum.pl $pkgdir/usr/bin/dnsenum
  install -Dm644 README.txt $pkgdir/usr/share/dnsenum/README
  install -Dm644 dns.txt $pkgdir/usr/share/dnsenum/dns.txt
}
