# Contributor: Matthew Sharpe <matt.sharpe@gmail.com>

pkgname=bkhive
pkgver=1.1.1
pkgrel=1
pkgdesc="Program for dumping the syskey bootkey from a Windows NT/2K/XP system hive"
url="http://sourceforge.net/projects/ophcrack"
arch=('i686' 'x86_64')
license="GPL"
groups=('archpwn' 'archpwn-forensic')
source=(http://dl.sourceforge.net/sourceforge/ophcrack/$pkgname-$pkgver.tar.gz syskey.txt)
md5sums=('bb5e076f3051c60331a7831b6c11719d' '8987a02d580924ac9c1da7196c083c05')

build() {
# Change directory to where everything was extracted
  cd $startdir/src/$pkgname-$pkgver

# Compile it
  make || return 1

# Install the program
  install -D -m755 bkhive $startdir/pkg/usr/bin/bkhive

# Install man pages
  install -D -m644 bkhive.1 $startdir/pkg/usr/man/man1/bkhive.1

# Install docs for Windows Syskey
  install -D ../syskey.txt $startdir/pkg/usr/share/bkhive/syskey.txt
}
