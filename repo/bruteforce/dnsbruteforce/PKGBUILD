pkgname=dnsbruteforce
pkgver=0.1
pkgrel=1
pkgdesc="DNS bruteforcer" 
url="http://www.revhosts.net/DNSBruteforce"
arch=(any)
license="GPL" 
groups=('archpwn' 'archpwn-bruteforce')
depends=('python>=2.4' 'pydns') 
source=(http://trac.revhosts.org/svn/DNSBruteforce/trunk/DNSBruteforce.py
  http://trac.revhosts.org/svn/DNSBruteforce/trunk/README
  http://trac.revhosts.org/svn/DNSBruteforce/trunk/hosts-txt
) 
md5sums=('e47585243f0719040246be69d2395e99'
         '8b4379632b1f999ee062d1dc7e165dd0'
         '9d202c33e27c2c081ebc6b6bbd897dd9')

build() { 
  cd $srcdir

  install -d $pkgdir/usr/bin
  install -d $pkgdir/usr/share/doc/DNSBruteforce

  install -Dm755 DNSBruteforce.py $pkgdir/usr/bin/DNSBruteforce
  install -Dm644 README $pkgdir/usr/share/doc/DNSBruteforce
  install -Dm644 hosts-txt $pkgdir/usr/share/doc/DNSBruteforce
}
