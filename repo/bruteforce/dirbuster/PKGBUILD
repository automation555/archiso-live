# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=dirbuster
pkgver=0.12
pkgrel=1
pkgdesc="DirBuster is an application designed to brute force directories and files names on web/application servers" 
url="http://www.owasp.org/index.php/Category:OWASP_DirBuster_Project" 
license="LGPL" 
arch=(i686 x86_64)
depends=('java-runtime') 
groups=('archpwn' 'archpwn-fuzzer' 'archpwn-bruteforce')
source=(http://downloads.sourceforge.net/dirbuster/DirBuster-$pkgver.tar.bz2) 
md5sums=('1db1c2e6f0d06f2f1aa662775567b6fa')

build() { 
  cd $startdir/src/
  install -d $pkgdir/usr/bin
  install -d $pkgdir/usr/share/$pkgname
  cp -r DirBuster-$pkgver/* $pkgdir/usr/share/$pkgname/
  cat > $pkgdir/usr/bin/$pkgname << EOF
#!/bin/sh
cd /usr/share/dirbuster/
java -jar DirBuster-$pkgver.jar \$*
EOF
  chmod 0755 $pkgdir/usr/bin/$pkgname
}
