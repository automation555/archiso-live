pkgname=medusa
pkgver=1.4
pkgrel="1" 
pkgdesc="Medusa is a speedy, massively parallel, modular, login brute-forcer for network "
makedepends=('make' 'gcc' 'openssl')
depends=('openssl')
source=("http://www.foofus.net/jmk/tools/$pkgname-$pkgver.tar.gz")
url="http://www.foofus.net/jmk/medusa/medusa.html"
md5sums=('aad236c87aaadbdc9162b6658c2118e6')
license="GPL"
groups=('archpwn' 'archpwn-bruteforce' 'archpwn-password')
arch=('i686' 'x86_64')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --enable-untested=yes --with-default-mod-path="/usr/lib/medusa/modules" --prefix="$startdir/pkg/" && \
  make && \
  make install || return 1
}

