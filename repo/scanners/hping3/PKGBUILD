# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=hping3
pkgver=20051105
pkgrel=1
pkgdesc="hping is a command-line oriented TCP/IP packet assembler/analyzer"
url="http://www.hping.org"
depends=('tcl' 'libpcap')
license="GPL"
arch=(i686 x86_64)
groups=('archpwn' 'archpwn-scanners')
source=(http://www.hping.org/$pkgname-$pkgver.tar.gz)
md5sums=('ca4ea4e34bcc2162aedf25df8b2d1747')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure
  make || return 1
  mkdir -p $startdir/pkg/usr/sbin
  mkdir -p $startdir/pkg/usr/man/man8
  cp $startdir/src/$pkgname-$pkgver/hping3 $startdir/pkg/usr/sbin
  cp $startdir/src/$pkgname-$pkgver/docs/hping3.8  $startdir/pkg/usr/man/man8
  return 0
}
