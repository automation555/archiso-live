# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=sqlix
pkgver=1.0
pkgrel=1
pkgdesc="SQL injection scanner written in Perl"
arch=('i686' 'x86_64')
url="http://www.owasp.org/index.php/Category:OWASP_SQLiX_Project"
groups=('archpwn' 'archpwn-scanners' 'archpwn-www' 'archpwn-database')
license=('GPL')
depends=('perl-html-tree' 'perl-algorithm-diff' 'perl-tie-chararray' 'perl-www-checksite')
source=(http://cedri.cc/tools/SQLiX_v1.0.tar.gz)
md5sums=('b97cf678640b6b73155855a0356523d5')

build() {
  install -d $pkgdir/usr/bin || return 1
  install -d $pkgdir/usr/share/$pkgname || return 1

  chmod 777 $srcdir/*/lwp_cookies.dat || return 1
  cp -ax $srcdir/*/* $pkgdir/usr/share/$pkgname/ || return 1

  cat > $pkgdir/usr/bin/$pkgname << EOF
#!/bin/sh
cd /usr/share/$pkgname
perl SQLiX.pl \$*
EOF
  chmod 0755 $pkgdir/usr/bin/sqlix || return 1
}

