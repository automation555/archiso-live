# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=ipscan
pkgver=3.0b3
_pkgver=3.0-beta3
pkgrel=1
pkgdesc="open-source and cross-platform network scanner designed to be fast and simply to use."
url="http://www.angryziber.com/w/Home"
arch=(any)
groups=('archpwn' 'archpwn-scanners')
license=('GPL')
depends=('java-environment')
source=(ipscan.sh
        http://downloads.sourceforge.net/ipscan/${pkgname}-linux-${_pkgver}.jar)
noextract=($pkgname-linux-$_pkgver.jar)
md5sums=('d9cdd31c8ca74b6b411f6ec0f94d8f8c'
         'ca7498c6768189122d3ee9710ffb6a4d')

build() {
  cd "$srcdir"
  install -d $pkgdir/usr/bin
  install -d $pkgdir/usr/share/$pkgname
  install -Dm755 ipscan.sh $pkgdir/usr/bin/ipscan
  install -Dm640 $pkgname-linux-$_pkgver.jar $pkgdir/usr/share/$pkgname/$pkgname.jar
}

# vim:set ts=2 sw=2 et:
