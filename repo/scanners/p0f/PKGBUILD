# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=p0f
pkgver=2.0.8
pkgrel=1
pkgdesc="passive OS fingerprinting tool"
license="GPL"
makedepends=('libpcap')
url="http://lcamtuf.coredump.cx/p0f.shtml"
arch=(i686 x86_64)
groups=('archpwn' 'archpwn-scanners')
source=(http://lcamtuf.coredump.cx/p0f/$pkgname-$pkgver.tgz)
md5sums=(''1ccbcd8d4c95ef6dae841120d23c56a5'')

build() {
	cd $startdir/src/p0f
	make || return 1
	mkdir -p $startdir/pkg/usr/sbin \
	         $startdir/pkg/etc/p0f \
		 $startdir/pkg/usr/man/man1
	cp p0frep p0f $startdir/pkg/usr/sbin
	cp p0f.fp p0fa.fp p0fr.fp p0fo.fp $startdir/pkg/etc/p0f
	cp p0f.1 $startdir/pkg/usr/man/man1
}
