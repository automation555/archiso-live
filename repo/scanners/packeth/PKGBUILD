pkgname=packeth
pkgver=1.6.2
pkgrel=1
pkgdesc="A Linux GUI packet generator tool for ethernet."
depends=(gtk2)
source=("http://downloads.sourceforge.net/packeth/packETH-1.6.tar.gz" Makefile.patch)
url="http://packeth.sourceforge.net/"
groups=('archpwn' 'archpwn-scanners')
arch=('i686' 'x86_64')
license=('GPL')
md5sums=('7303f884fbd2c8d18b2799d7c3fa8463'
         '6e5872e1932d55fda050a369e0e6eb55')

build() {
  cd $srcdir/packETH-1.6
  patch -p1 < $srcdir/Makefile.patch
  cd ./src
  /usr/bin/make || return 1
  /usr/bin/make install DESTDIR=$pkgdir
}
