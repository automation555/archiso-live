# Contributor: Rodrigo S. Wanderley <rodrigoswanderley@gmail.com>
pkgname=netsed
pkgver=0.01b
pkgrel=1
pkgdesc="Small and handful utility design to alter the contents of packets forwarded thru network in real time."
arch=('i686' 'x86_64')
url="http://www.mirrors.wiretapped.net/security/packet-construction/netsed/"
license=('GPL')
groups=('archpwn' 'archpwn-sniffer')
source=(http://www.mirrors.wiretapped.net/security/packet-construction/netsed/$pkgname-$pkgver.tar.gz)
md5sums=('5dd7ea6a2ae802c2182ab7246ccc4509')

build() {
  cd $startdir/src/$pkgname-$pkgver
  make || return 1
  mkdir -p $startdir/pkg/usr/bin
  cp $pkgname $startdir/pkg/usr/bin/ || return 1
}
