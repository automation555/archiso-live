# Contributor: Francesco Piccinno <stack.box@gmail.com>

pkgname=tcpreplay
pkgver=3.3.2
pkgrel=1
pkgdesc="Gives the ability to use the previously captured traffic in a libpcap format"
url="http://tcpreplay.synfin.net"
arch=(i686 x86_64)
license=("GPL")
makedepends=('gcc')
groups=('archpwn' 'archpwn-sniffer')
source=(http://downloads.sourceforge.net/sourceforge/tcpreplay/${pkgname}-${pkgver}.tar.gz)
md5sums=('d6bda50e505dcd2c4a9bf45c124c5d69')

build() {
     cd $startdir/src/$pkgname-$pkgver
     ./configure --prefix=/usr
     make || return 1
     make DESTDIR=$startdir/pkg install
}

