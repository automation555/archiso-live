# Contributor: DigitalPathogen <aur@digitalpathogen.co.uk>

pkgname=burpsuite
pkgver=1.1
pkgrel=1
pkgdesc="A web application vulnerability assesssment proxy and toolset"
url="http://www.parosproxy.org/"
depends=('java-runtime')
arch=('i686' 'x86_64')
groups=('archpwn' 'archpwn-www')
license=('PortSwigger')
source=(http://www.portswigger.net/suite/$pkgname\_v$pkgver.tar.gz)
md5sums=('83f4a7797723ce5670bfbb42bd1a1433')

build() {
  install -d $pkgdir/usr/share/$pkgname
  cp -dp $pkgname\_v$pkgver/* $pkgdir/usr/share/$pkgname/
  install -Dm755 $pkgname\_v$pkgver/suite.bat $pkgdir/usr/share/$pkgname/suite.sh
  rm -f $pkgdir/usr/share/$pkgname/suite.bat
}
