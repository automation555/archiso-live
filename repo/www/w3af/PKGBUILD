pkgname=w3af
pkgver=beta7
_rev=r1813
pkgrel=1
pkgdesc="Web Application Attack and Audit Framework"
depends=('pyopenssl' 'python-soappy')
source=(http://mesh.dl.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver-$_rev.tar.bz2 $pkgname.desktop startscript.sh)
url="http://w3af.sourceforge.net/"
groups=('archpwn' 'archpwn-www' 'archpwn-scanners')
license=('GPL')
arch=('i686' 'x86_64')
md5sums=('4835387733df951ea33a9b93a0ca3659'
         '4714baa03c952fb507cffb6e9d309d36'
         '7f95174761f155f266aab367a292331f')

build() {
	cd $startdir/src/w3af
	mkdir -p $startdir/pkg/opt/w3af $startdir/pkg/usr/bin $startdir/pkg/usr/share/applications/
	cp -r $startdir/src/w3af/* $startdir/pkg/opt/w3af/
	ln -s $startdir/pkg/opt/w3af/w3af $startdir/pkg/usr/bin/w3af
	cp $startdir/src/startscript.sh $startdir/pkg/opt/w3af/
	cp $startdir/src/w3af.desktop $startdir/pkg/usr/share/applications/
}
