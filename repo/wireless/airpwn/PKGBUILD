pkgname=airpwn
pkgver=1.3
pkgrel=2
pkgdesc="Airpwn is a tool for generic packet injection on an 802.11 network."
arch=('i686' 'x86_64')
url="http://airpwn.sourceforge.net"
license=('GPL')
depends=('pcre' 'libpcap' 'openssl' 'lorcon' 'wireless_tools' 'libnet')
groups=('archpwn' 'archpwn-wireless')
source=(http://downloads.sourceforge.net/airpwn/$pkgname-$pkgver.tgz)
md5sums=('15b6f1cd287b4bb20dd586bb6c83628d')

build() {
  cd $startdir/src/$pkgname-$pkgver
  sed -ie '/if_ether.h/a#include <linux/if.h>' airpwn.c
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
