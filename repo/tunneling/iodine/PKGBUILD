pkgname=iodine
pkgver=0.5.0
pkgrel=1
pkgdesc="Lets you tunnel IPv4 data through a DNS server."
arch=('i686' 'x86_64')
url="http://code.kryo.se/iodine"
license=('custom:ISC')
groups=('archpwn' 'archpwn-tunneling')
source=(http://code.kryo.se/iodine/$pkgname-$pkgver.tar.gz
        http://code.kryo.se/iodine/README.txt)
md5sums=('af2d9062b7788fc47385d8c6c645dfa0'
         'c3f3a544634ff5dfe680dfb280e124fa')

build() {
  cd $srcdir/$pkgname-$pkgver
  make || return 1
  make prefix=/usr DESTDIR=$pkgdir install

  install -d $pkgdir/usr/share/licenses/iodine
  sed -n '/AUTHORS & LICENSE/,$p' $srcdir/README.txt > $pkgdir/usr/share/licenses/iodine/LICENSE
}
# vim:set ts=2 sw=2 et:
