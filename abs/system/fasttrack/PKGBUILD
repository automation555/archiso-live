pkgname=fasttrack
pkgver=4.0
pkgrel=1
pkgdesc="Automated penetration suite for penetration testers."
url="http://www.securestate.com/Pages/Fast-Track.asp"
groups=('archpwn' 'archpwn-scanners')
license=('GPL')
arch=(any)
depends=('python' 'metasploit3' 'psyco' 'python-pysqlite' 'pymssql' 'beautiful-soup' 'python-mills' 'sqlite3' 'proftpd')
makedepends=('python' 'metasploit3' 'psyco' 'python-pysqlite' 'pymssql' 'beautiful-soup' 'python-mills')
source=(http://www.securestate.com/files/$pkgname/$pkgname.tgz)
md5sums=('b0271ec1483170a08fbb1207de718dd8')

build() {
  cd "$srcdir"
  rm setup.py fasttrack.tgz
  install -d $pkgdir/usr/share/$pkgname/
  cp -r * $pkgdir/usr/share/$pkgname/ || return 1
}

