pkgname=unetbootin
pkgver=307
pkgrel=1
pkgdesc="UNetbootin allows for the installation of various Linux/BSD livecd distributions to a partition or USB drive."
url="http://unetbootin.sourceforge.net/"
license="GPL"
arch=('i686')
depends=('syslinux' 'p7zip' 'qt' )
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-linux-$pkgver)
md5sums=('e8f7217e37600e8126da29940dcc60e9')
options=(!strip)

build() {
	cd $srcpkg
	mkdir -p $pkgdir/usr/sbin
	install -m 644 $srcdir/$pkgname-linux-$pkgver $pkgdir/usr/sbin/$pkgname
	chmod +x $pkgdir/usr/sbin/$pkgname
}
