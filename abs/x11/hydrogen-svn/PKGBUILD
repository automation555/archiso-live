# Contributor: Philipp Ãœberbacher <hollunder at gmx dot at>

pkgname=hydrogen-svn
pkgver=935
pkgrel=2
pkgdesc="Drum Machine and Pattern-based Sequencer"
arch=(i686 x86_64)
license=('GPL')
url="http://www.hydrogen-music.org/"
depends=('liblrdf' 'libtar' 'qt' 'lash')
options=('!libtool')
conflicts=('hydrogen')
provides=('hydrogen')
source=()

_svntrunk=http://svn.assembla.com/svn/hydrogen/trunk
_svnmod=hydrogen

build() {
  cd "$srcdir"

  if [ -d $_svnmod/.svn ]; then
    (cd $_svnmod && svn up -r $pkgver)
  else
    svn co $_svntrunk --config-dir ./ -r $pkgver $_svnmod
  fi
  # hydrogen still thinks qt is in /opt
  #export QTDIR=/usr
  
  msg "SVN checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_svnmod-build"
  cp -r "$srcdir/$_svnmod" "$srcdir/$_svnmod-build"
  cd "$srcdir/$_svnmod-build"

  #
  # BUILD
  #
  QTDIR=/usr/lib/qt4 scons prefix=/usr cflags="$CFLAGS" $MAKEFLAGS oss=0 lash=1 debug=1 DESTDIR="$pkgdir" install || return 1

}
