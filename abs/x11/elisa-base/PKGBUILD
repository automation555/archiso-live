# Contributor: Bjorn Lindeijer <bjorn lindeijer nl>

pkgname=elisa-base
pkgver=0.5.22
pkgrel=1
pkgdesc="An open source cross-platform media center solution"
arch=('i686' 'x86_64')
url="http://elisa.fluendo.com/"
license=('GPL')
depends=('twisted' 'twisted-web2' 'pygtk' 'python-pigment>=0.3.9' 'gstreamer0.10-python'
	'setuptools' 'python-cssutils' 'pil' 'pyopenssl')
groups=('elisa')
replaces=('elisa')
optdepends=("ttf-liberation: for a good looking font"
	"xdg-user-dirs or pyxdg: for user default multimedia directories support"
	"python-gdata: for YouTube video streaming website support"
	"gstreamer-plugins-bad"
	"gstreamer-plugins-ugly"
	"gstreamer-ffmpeg"
	"lirc: for LIRC support"
	"python-daap: for DAAP support"
	"libgpod: for iPod support")
source=(http://elisa.fluendo.com/static/download/elisa/elisa-$pkgver.tar.gz)
md5sums=('2dda0790d0082e801b8d0e1bb671978b')

build() {
  cd "$srcdir/elisa-$pkgver"
  export PYTHONPATH=$PWD/elisa-core:$PWD/elisa-plugins:$PYTHONPATH
  python setup.py install --root="$pkgdir" || return 1
}
