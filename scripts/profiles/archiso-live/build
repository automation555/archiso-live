#!/bin/bash
WORKDIR=.working
DATE="$(date +%F)"
CDNAME="archiso-live"
ISONAME=$CDNAME-${DATE}.iso

makeiso() 
{
	mkarchiso -c $CDNAME -f all "${WORKDIR}" "${ISONAME}"
}

makesquashfs()
{
	mkarchiso -c $CDNAME -f squash "${WORKDIR}"
}

makeimg()
{
	mkarchiso -c $CDNAME -f imgprepare "${WORKDIR}"
	mkarchiso -c $CDNAME -f img "${WORKDIR}" "${ISONAME}"
}

clean()
{
	rm -rf "${WORKDIR}" "${ISONAME}"
}

if [ "${1}" = "makeiso" ]; then
	makeiso
fi

if [ "${1}" = "makeimg" ]; then
	makeimg
fi

if [ "${1}" = "clean" ]; then
	clean
fi

if [ "${1}" = "squash" ]; then
	makesquashfs
fi